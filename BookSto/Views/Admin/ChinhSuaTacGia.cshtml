@model BookSto.Models.tacgia
@{
    ViewBag.Title = "Chỉnh Sửa Tác Giả";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Chỉnh sửa tác giả</h4>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <form action="@Url.Action("ChinhSuaTacGia", "Admin")" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" id="MaTacGia" name="MaTacGia" value="@Model.MaTacGia">
                            <div class="form-group">
                                <label>Tên thể loại:</label>
                                <input type="text" id="TenTacGia" name="TenTacGia" class="form-control" value="@Model.TenTacGia">
                            </div>
                            <div class="form-group">
                                <label>Trạng Thái:</label>
                                <select class="form-control"  id="TrangThai" name="TrangThai">
                                    @if (@Model.TrangThai == 1)
                                    {
                                        <option value="1" selected>Hoạt Động</option>
                                        <option value="0">Không Hoạt Động</option>
                                    }
                                    else
                                    {
                                        <option value="1">Hoạt Động</option>
                                        <option value="0" selected>Không Hoạt Động</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Giới thiệu:</label>
                                <textarea class="form-control" id="GioiThieu" name="GioiThieu" rows="4">@Model.GioiThieu</textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <button type="reset" class="btn btn-danger">Làm mới</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
