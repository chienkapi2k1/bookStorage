@using BookSto.Models;
@model List<nguoidung>
@{
    ViewBag.Title = "DSTaiKhoan";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    var vb_tukhoa = "";
    if (ViewBag.tukhoa != null)
    {
        vb_tukhoa = ViewBag.tukhoa;
    }
}
    <!-- Page Content  -->
    <div id="content-page" class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h3 class="card-title">Tài Khoản</h3>
                            </div>
                            <div class="iq-search-bar">
                                <form action="#" class="searchbox" method="post">  
                                        @if (vb_tukhoa != "")
                                        {
                                            <input value="@vb_tukhoa" name="tukhoa" id="tukhoa" type="text" class="text search-input" placeholder="@vb_tukhoa">
                                        }
                                        else
                                        {
                                            <input value="" name="tukhoa" id="tukhoa" type="text" class="text search-input" placeholder="Tìm kiếm ...">
                                        }
                                        <a type="submit" class="search-link" href=""><i class="ri-search-line"></i></a>                             
                                </form>
                            </div>
                            <div class="iq-card-header-toolbar d-flex align-items-center">
                                <a href="@Url.Action("DangKy", "Admin", new { @nv = 1 })" class="btn btn-primary">Tạo tài khoản cho nhân viên</a>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <div class="table-responsive">
                                <table class="data-tables table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr style="text-align:center;">
                                            <th style="width: 3%;">Mã</th>
                                            <th style="width: 10%;">Chức vụ</th>
                                            <th style="width: 10%;">Họ tên</th>
                                            <th style="width: 4%;">SĐT</th>
                                            <th style="width: 20%;">Địa chỉ</th>
                                            <th style="width: 6%;">Trạng thái</th>
                                            <th style="width: 3%;">Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model.Count() > 0)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <tr style="text-align: center;">
                                                        <td>@item.MaNguoiDung</td>
                                                        <td>@item.Role</td>
                                                        <td>@item.HoTen</td>
                                                        <td>@item.SDT</td>
                                                        <td>@item.DiaChi</td>
                                                        <td style="text-align:center;  padding:0px;">
                                                            @if (@item.TrangThai == 1)
                                                            {
                                                                <span style="width: 80%;" class="badge badge-success">Hoạt động</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge badge-danger">Không hoạt động</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            <div class="flex align-items-center list-user-action">
                                                                <a href="@Url.Action("ChinhSuaSach","Admin", new { @MaTaiKhoan = item.MaNguoiDung })" class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"><i class="ri-pencil-line"></i></a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



