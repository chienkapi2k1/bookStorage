@using BookSto.Models;
@model List<DSSach>
@{
    ViewBag.Title = "Quản lý Sách";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    var i = "";
    var vb_tukhoa = "";
    var ViewBag_tacgia = ViewBag.ListTacGia as List<BookSto.Models.TenTacGia>;
    var ViewBag_lstsach_model = ViewBag.lstsach_model; // dư
    if (TempData["TacGia"] != null)
    {
        i = (string)TempData["TacGia"];
    }
    if (ViewBag.tukhoa != null)
    {
        vb_tukhoa = ViewBag.tukhoa;
    }
}

<!-- Page Content  -->
<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h3 class="card-title">Sách</h3>
                        </div>
                        <div class="iq-search-bar" style="width: 80%;">
                            <form action="#" class="searchbox" style="width: 100%"  method="post">
                                <div style="float: left; padding: 0;" class="col-4">
                                    @if (vb_tukhoa != "")
                                    {
                                        <input value="@vb_tukhoa" name="tukhoa" id="tukhoa" type="text" class="text search-input" placeholder="@vb_tukhoa">
                                    }
                                    else
                                    {
                                        <input value="" name="tukhoa" id="tukhoa" type="text" class="text search-input" placeholder="Tìm kiếm ...">
                                    }
                                    <a type="submit" class="search-link" href=""><i class="ri-search-line"></i></a>
                                </div>
                                <div style="float: left; padding:0 5px;" class="col-4">
                                    <select class="form-control mb-3" id="tentacgia" name="tentacgia">
                                        <option selected value="-">Tất cả tác giả</option>
                                        @foreach (var item in ViewBag_tacgia)
                                        {
                                            if (i == item.tentacgia)
                                            {
                                                <option value="@item.tentacgia" selected>@item.tentacgia</option>
                                            }
                                            else
                                            {
                                                <option value="@item.tentacgia">@item.tentacgia</option>
                                            }   
                                        }
                                    </select>
                                </div>
                            </form>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                            <a href="@Url.Action("ThemSach","Admin")" class="btn btn-primary">Thêm sách</a>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <table class="data-tables table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr style="text-align:center;">
                                        <th style="width: 3%;">Mã</th>
                                        <th style="width: 12%;">Ảnh</th>
                                        <th style="width: 16%;">Tên sách</th>
                                        <th style="width: 10%;">Tác Giả</th>
                                        <th style="width: 10%;">Thể loại</th>
                                        <th style="width: 10%;">NXB</th>
                                        <th style="width: 10%;">Giá gốc</th>
                                        <th style="width: 4%;">Giảm giá</th>
                                        <th style="width: 4%;">Thùng</th>
                                        <th style="width: 4%;">Số trang</th>
                                        <th style="width: 4%;">Tập</th>
                                        <th style="width: 4%;">Tổng tập</th>
                                        <th style="width: 6%;">Trạng thái</th>
                                        <th style="width: 3%;">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Count() > 0)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr style="text-align: center;">
                                                    <td>@item.MaSach</td>
                                                    <td><img class="img-fluid rounded" src="@Url.Content("~/assets/book_images/" + item.Anh)" alt=""></td>
                                                    <td>@item.TenSach</td>
                                                    <td>@item.TacGia</td>
                                                    <td>@item.TheLoai</td>
                                                    <td>@item.NXB</td>
                                                    <td>@item.GiaTriSach</td>
                                                    <td>@item.GiamGia%</td>
                                                    <td>@item.SoLuong</td>
                                                    <td>@item.TongSoTrang</td>
                                                    <td>@item.Tap</td>
                                                    <td>@item.TongSoTap</td>
                                                    <td style="text-align:center;  padding:0px;">
                                                        @if (@item.TrangThai == 1)
                                                        {
                                                            <span style="width: 80%;" class="badge badge-success">Còn hàng</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-danger">Hết hàng</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <div class="flex align-items-center list-user-action">
                                                            <a href="@Url.Action("ChinhSuaSach","Admin", new { @MaSach = item.MaSach })" class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" ><i class="ri-pencil-line"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

