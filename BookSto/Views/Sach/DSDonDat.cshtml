@using BookSto.Models;
@model List<donxuat>
@{
    ViewBag.Title = "DSDonDat";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    var search = "";
    if (ViewBag.search != null)
    {
        search = ViewBag.search;
    }
}
<!-- Page Content  -->
<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Danh sách đơn hàng</h4>
                        </div>
                        <div class="iq-search-bar">
                            <form action="#" class="searchbox">
                                @if (search != "")
                                {
                                    <input value="@search" name="search" id="search" type="text" class="text search-input" placeholder="Search Here...">
                                }
                                else
                                {
                                    <input value="" name="search" id="search" type="text" class="text search-input" placeholder="Search Here...">
                                }
                                <a type="submit" class="search-link" href=""><i class="ri-search-line"></i></a>
                            </form>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <table style="text-align: center;" class="data-tables table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 7%;">Mã Đơn</th>
                                        <th style="width: 33%;">Mặt hàng</th>
                                        <th style="width: 20%;">Ngày đặt</th>
                                        <th style="width: 13%;">Tổng tiền</th>
                                        <th style="width: 10%;">Trạng Thái</th>
                                        <th style="width: 10%;">Chi tiết</th>
                                    </tr>
                                </thead>
                                @{
                                    foreach (donxuat item in Model)
                                    {
                                        <tr>
                                            <td>#@item.MaDB</td>
                                            <td style="text-align: left;">
                                                @foreach(ctdonxuat ct in item.ctdonxuats)
                                                {
                                                    @ct.sach.TenSach <br>
                                                }
                                            </td>
                                            <td>@item.NgayTao</td>
                                            <td style="font-weight:bold;">@String.Format("{0:N0}", item.TongTien) ₫</td> @*@String.Format("{0:C}", item.TongTien) 500.000,00 đ *@
                                            <td style="text-align: center;">
                                                @switch (item.TrangThai)
                                                {@*trạng thái đơn xuất (1: chờ admin duyệt, 5: hủy đơn, 2:admin chấp nhận đơn, 3:đang giao hàng, 4 : đã nhận hàng)*@
                                                case 5:
                                                    <span class="badge badge-secondary">Hủy đơn</span>
                                                    break;
                                                case 1:
                                                    <span class="badge badge-warning">Chờ duyệt</span>
                                                    break;
                                                case 2:
                                                    <span class="badge badge-info">Đã duyệt đơn</span>
                                                    break;
                                                case 3:
                                                    <span class="badge badge-warning">Đang giao hàng</span>
                                                    break;
                                                case 4:
                                                    <span class="badge badge-success">Đã nhận hàng</span>
                                                    break;
                                            }
                                            </td>
                                            <td style="text-align: center;">
                                                <div class="flex align-items-center list-user-action">
                                                    <a href="@Url.Action("CTDonDat","Sach", new { MaDB = item.MaDB })" class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Xem chi tiết"><i class="ri-pencil-line"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

